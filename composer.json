{
    "name": "maiketech/maike-core",
    "description": "maiketech php,thinkphp core",
    "version": "2.0.5",
    "autoload": {
        "psr-4": {
            "maike\\": "src/"
        }
    },
    "authors": [
        {
            "name": "jerry",
            "email": "xkd@qq.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.0",
        "topthink/framework": "^8.0",
        "spatie/macroable": "^2.0",
        "firebase/php-jwt": "^6.9",
        "phpoffice/phpword": "^1.1",
        "phpoffice/phpspreadsheet": "^1.29",
        "overtrue/easy-sms": "2.5"
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('config/core.php', 'config/core.php');\"",
            "php -r \"copy('config/map.php', 'config/map.php');\"",
            "php -r \"copy('config/pay.php', 'config/pay.php');\"",
            "php -r \"copy('config/wechat.php', 'config/wechat.php');\"",
            "php -r \"copy('core/Common.php', 'app/Common.php');\""
        ]
    },
    "repositories": [
        {
            "description": "阿里云镜像",
            "type": "composer",
            "url": "https://mirrors.aliyun.com/composer/",
            "canonical": false
        },
        {
            "description": "腾讯云镜像",
            "type": "composer",
            "url": "https://mirrors.cloud.tencent.com/composer/",
            "canonical": false
        }
    ]
}
